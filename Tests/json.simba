begin
  json := NewJSONArray();
  json.AddString('', 'abc');
  json.AddInt('', 123);
  json.AddFloat('', 1.23);
  json.AddBool('', True);
  json.AddArray('', NewJSONArray());
  json.AddObject('', NewJSONObject());
  Assert(json.Count = 6);
  Assert(json.Typ = EJSONType.ARR);
  Assert(json.Item[0].Typ = EJSONType.STR);
  Assert(json.Item[1].Typ = EJSONType.INT);
