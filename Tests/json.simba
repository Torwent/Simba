  Assert(json.Item[3].Typ = EJSONType.BOOL);
  Assert(json.Item[4].Typ = EJSONType.ARR);
  Assert(json.Item[5].Typ = EJSONType.OBJ);
  Assert(json.ToJSON =
    '['                           + LINE_SEP +
    '  "abc",'                    + LINE_SEP +
    '  123,'                      + LINE_SEP +
    '  1.2300000000000000E+000,'  + LINE_SEP +
    '  true,'                     + LINE_SEP +
    '  ['                         + LINE_SEP +
    '  ],'                        + LINE_SEP +
    '  {}'                        + LINE_SEP +
