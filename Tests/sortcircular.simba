{$assertions on}

var
  TPA: TPointArray;
begin
  TPA := TPointArray.CreateFromCircle(TPoint.Create(100, 100), 14, False);
  TPA := TPA.SortCircular(TPA.Mean, 90, True);

  Assert(TPA[0]  = [114, 100]);
  Assert(TPA[20] = [100, 114]);
  Assert(TPA[40] = [86, 100]);
  Assert(TPA[60] = [100, 86]);
end.
